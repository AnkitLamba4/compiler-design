%{
#include <stdio.h>

int words = 0;
int characters = 0;
int spaces = 0;
int lines = 0;
%}

%%
[a-zA-Z_]+          { words++; characters += yyleng; }
[ \t]               { spaces++; characters++; }
\n                  { lines++; characters++; }
.                   { characters++; }
%%

int main(int argc, char *argv[])
{
    if (argc > 1)
        yyin = fopen(argv[1], "r");

    yylex();

    printf("Number of words      = %d\n", words);
    printf("Number of characters = %d\n", characters);
    printf("Number of spaces     = %d\n", spaces);
    printf("Number of lines      = %d\n", lines);

    return 0;
}
