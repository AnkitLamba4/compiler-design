%{
#include <stdio.h>
#include <stdlib.h>
%}

%token NUM
%left '+' '-'
%left '*' '/'

%%
E : E '+' E
  | E '-' E
  | E '*' E
  | E '/' E
  | '(' E ')'
  | NUM
  ;
%%

int main()
{
    printf("Enter arithmetic expression:\n");
    yyparse();
    printf("Valid arithmetic expression\n");
    return 0;
}

int yyerror(char *s)
{
    printf("Invalid arithmetic expression\n");
    exit(0);
}
